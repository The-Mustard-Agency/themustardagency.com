{% extends "base.twig" %}

{% block content %}
	<div id="postBody" class="content-wrapper">
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
				{% include "partial/content_headers.twig" %}
<div class="mustard">
	{% for service in post.get_field('box_reapeater') %}
		<div class="mustard_block" style="background-color:{{ service.box_background_color }};">
			<div class="mustard_block_inner">
				<div class="mustard_block_inner_left" data-bg="{{ service.box_side_image }}">
				</div>
				<div class="mustard_block_inner_right">
					<h2>{{ service.box_title }}</h2>
					<p>{{ service.box_the_text }}</p>
					<button class="hvr-bounce-to-top" onclick="window.location='{{ service.box_link }}';">see more</button>
				</div>
			</div>
		</div>
	{% endfor %}
</div>
<section class="article-content">
	<div class="article-body">
		<h1>search</h1>
		<form role="search" method="get" id="searchform" action="{{site.url}}">
			<div class="row collapse">
				<div class="large-8 small-9 columns">
					<input type="text" value="" name="s" id="s" placeholder="{{ __('Search...', 'timber-foundation')|e }}">
					<button lable="submit" id="searchsubmit" value="&#xf002;" class="button postfix">submit</button>
				</div>
			</div>
		</form>
	</div>
</section>
{% if post.content %}
	<section class="article-content">
		<div class="article-body">
			{{ post.content }}
		</div>
	</section>
{% endif %}
</article>
	</div><!-- /content-wrapper -->

	<script>
ScrollReveal().reveal('.vc_grid-item');
	</script>

{% endblock %}
