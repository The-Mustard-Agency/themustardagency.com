<div class="blog">
	{% for post in posts %}
	    <div class="latest_news_single">
		    <a href="{{ post.get_permalink }}">
	    		<h2>{{ post.post_title }}</h2>
				<p class="news_date">{{ post.post_date|time_ago }}</p>
				<p>{{ post.post_content|excerpt(20) }}</p></a>
			<a href="{{ post.get_permalink }}">Read more</a>
    	</div>
	{% endfor %}
</div>
