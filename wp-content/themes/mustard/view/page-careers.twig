{% extends "base.twig" %}

{% block content %}
	<div id="postBody" class="content-wrapper">
		<article class="post-type-{{ post.post_type }}" id="post-{{ post.ID }}">
				{% include "partial/content_headers.twig" %}
			<section class="article-content">
				<h1 class="article-h1">{{ post.title }}</h1>
				<div class="article-body">
					{{ post.content }}

					<!-- career repeater block -->
					{% if post.careers >= 1 %}
					<h2>Current positions:</h2>
						{% for career in post.get_field('careers') %}
							<div class="itemblock">
								<h2>{{ career.job_title }}</h2>
								<p>{{ career.short_job_decription }}</p>
								{% if career.job_page_link %}<a href="{{ career.job_page_link }}">Click here for more details</a>{% endif %}
								<p>Please contact: <a href="mailto:{{ career.job_contact }}">{{ career.job_contact_name }}</a></p>
							</div>
						{% endfor %}
					{% else %}
						<h2 style="text-align: center;"></h2>
					{% endif %}

				</div>
			</section>
		</article>
	</div><!-- /content-wrapper -->
{% endblock %}
